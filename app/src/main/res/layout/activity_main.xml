<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save File"
        android:onClick="saveDataInFile"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read File"
        android:onClick="readFileData"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write external File"
        android:onClick="writeExternal"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read external File"
        android:onClick="readExternal"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save sharedpref"
        android:onClick="savePref"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="load shared pref"
        android:onClick="loadPref"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="remote data"
        android:onClick="checkremote"/>

</LinearLayout>